@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    
    // Инициализируем ViewBag для хранения фонов
    ViewBag.TestMessage = "Hello from Layout";
    // Убрали ссылку на PageBackgroundsModel, так как она больше не используется
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Preconnect для оптимизации загрузки ресурсов -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://player.vimeo.com">
    <link rel="preconnect" href="https://i.vimeocdn.com">  
    <!-- Background CSS -->
    <link rel="stylesheet" href="~/css/backgrounds.css" asp-append-version="true" />
    <!-- Остальные стили и скрипты -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"/>
    <link href="~/favicon.ico" rel="icon">
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" media="screen"/>
    
    <!-- Подключаем jQuery перед использованием -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Yandex.Metrika counter -->
    <script type="text/javascript">
        (function (m, e, t, r, i, k, a) {
            m[i] = m[i] || function () { (m[i].a = m[i].a || []).push(arguments) };
            m[i].l = 1 * new Date();
            for (var j = 0; j < document.scripts.length; j++) { if (document.scripts[j].src === r) { return; } }
            k = e.createElement(t), a = e.getElementsByTagName(t)[0], k.async = 1, k.src = r, a.parentNode.insertBefore(k, a)
        })
            (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

        ym(91377387, "init", {
            clickmap: true,
            trackLinks: true,
            accurateTrackBounce: true,
            webvisor: false
        });
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/91377387" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    
    <!-- Detect feature support for older browsers -->
    <script>
        // Проверяем поддержку современных функций
        document.documentElement.className = 
            ('willChange' in document.documentElement.style ? '' : 'no-willchange') + ' ' +
            ('IntersectionObserver' in window ? '' : 'no-intersection-observer');
    </script>
</head>

<body>
    @RenderBody()
    <div id="button-up">
      <span class="material-symbols-outlined">keyboard_double_arrow_up</span>
    </div>

    <!-- Background HTML (видео и скрипты) -->
    @{
        var backgroundHtml = Context.Items["BackgroundHtml"] as Dictionary<string, string>;
    }
    @if (backgroundHtml != null && backgroundHtml.Any())
    {
        foreach (var html in backgroundHtml.Values)
        {
            @Html.Raw(html)
        }
    }

<script>
    $(document).ready(function () {
        var button = $('#button-up');
        $(window).scroll(function () {
            if ($(this).scrollTop() > 300) {
                button.fadeIn();
            } else {
                button.fadeOut();
            }
        });
        button.on('click', function () {
            $('body, html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });
    });
</script>

<partial name="_BackgroundConfig" />
<script src="~/js/lazy-backgrounds.js" asp-append-version="true"></script>
<script>
    // Проверка работы lazy backgrounds
    document.addEventListener('DOMContentLoaded', function() {
        console.log('=== LAZY BACKGROUNDS DEBUG ===');
        const elements = document.querySelectorAll('[data-bg-url]');
        console.log(`Total elements with data-bg-url: ${elements.length}`);
        
        elements.forEach((el, i) => {
            const url = el.dataset.bgUrl;
            const rect = el.getBoundingClientRect();
            console.log(`Element ${i}:`, {
                url: url,
                visible: rect.top < window.innerHeight && rect.bottom > 0,
                position: `${rect.top}px from top`,
                size: `${rect.width}x${rect.height}`,
                dataset: el.dataset
            });
        });
    });
</script>
</body>
</html>