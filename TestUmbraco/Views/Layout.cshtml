<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Подключаем все фоновые стили через API -->
@{
    // Отладочная информация
    var debugInfo = Context.Items["BackgroundDebug"] as List<string>;
    if (debugInfo != null && debugInfo.Any())
    {
        <text><!-- ========== BACKGROUND DEBUG START ========== --></text>
        @foreach (var msg in debugInfo)
        {
            <text><!-- @msg --></text>
        }
        <text><!-- ========== BACKGROUND DEBUG END ========== --></text>
    }
    
    // 1. Фоновые изображения (через API)
    var backgroundParams = Context.Items["BackgroundParams"] as List<string>;
    <text><!-- BackgroundParams count: @(backgroundParams?.Count ?? 0) --></text>
    
    if (backgroundParams != null && backgroundParams.Any())
    {
        var backgroundsParam = string.Join("|", backgroundParams);
        <text><!-- Backgrounds param: @backgroundsParam --></text>
        
        <link rel="stylesheet" href="/api/background/multiple?backgrounds=@Uri.EscapeDataString(backgroundsParam)" />
    }
    else
    {
        <text><!-- No background images to load via API --></text>
    }
    
    // 2. CSS стили для цветов, градиентов и видео
    var cssStyles = Context.Items["CssStyles"] as List<string>;
    <text><!-- CssStyles count: @(cssStyles?.Count ?? 0) --></text>
    
    if (cssStyles != null && cssStyles.Any())
    {
        <style>
            /* Background styles for colors, gradients and videos */
            @Html.Raw(string.Join("\n", cssStyles))
        </style>
    }
    else
    {
        <text><!-- No CSS styles to load --></text>
    }
}

<style>
