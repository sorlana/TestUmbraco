@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    
    // Проверяем, нужно ли подключать стили меню
    var blockGridPage = Model as Umbraco.Cms.Web.Common.PublishedModels.BlockGrid;
    var hasMenu = false;
    var hasMenuLanding = false;
    
    if (blockGridPage != null)
    {
        var menuItems = blockGridPage.Value<IEnumerable<IPublishedContent>>("menu");
        var menuLandingItems = blockGridPage.Value<Umbraco.Cms.Core.Models.Blocks.BlockListModel>("menuLanding");
        hasMenu = menuItems != null && menuItems.Any();
        hasMenuLanding = menuLandingItems != null && menuLandingItems.Any();
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Page Title через Partial View -->
    @await Html.PartialAsync("~/Views/Partials/layout/_PageTitle.cshtml", Model)
    
    <!-- Preconnect для оптимизации загрузки ресурсов -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://player.vimeo.com">
    <link rel="preconnect" href="https://i.vimeocdn.com">  
    <!-- Background CSS -->
    
    <link rel="stylesheet" href="~/css/backgrounds.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lazy-load.css" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" media="screen"/>
    
    <!-- Остальные стили и скрипты -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"/>
    
    <!-- Favicon через Partial View -->
    @await Html.PartialAsync("~/Views/Partials/layout/_Favicon.cshtml", Model)
    
    <!-- Яндекс.Метрика через Partial View -->
    @await Html.PartialAsync("~/Views/Partials/layout/_YandexMetrika.cshtml")
    
    <!-- Подключаем jQuery перед использованием -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Detect feature support for older browsers -->
    <script>
        document.documentElement.className = 
            ('willChange' in document.documentElement.style ? '' : 'no-willchange') + ' ' +
            ('IntersectionObserver' in window ? '' : 'no-intersection-observer');
    </script>
</head>

<body>

    <!-- Меню сайта через Partial View -->
    @await Html.PartialAsync("~/Views/Partials/layout/_SiteMenu.cshtml", Model)

    @RenderBody()
    
    <!-- Кнопка "Наверх" через Partial View -->
    @await Html.PartialAsync("~/Views/Partials/layout/_ButtonUp.cshtml", Model)

    <!-- Background HTML -->
    @{
        var backgroundHtml = Context.Items["BackgroundHtml"] as Dictionary<string, string>;
    }
    @if (backgroundHtml != null && backgroundHtml.Any())
    {
        foreach (var html in backgroundHtml.Values)
        {
            @Html.Raw(html)
        }
    }

    <!-- Скрипт для кнопки "Наверх" -->
    <script src="~/js/button-up.js" asp-append-version="true"></script>
    
    <!-- Скрипт для меню (только если нужно) -->
    @if (hasMenu || hasMenuLanding)
    {
        <script src="~/js/site-menu.js" asp-append-version="true"></script>
    }

    <partial name="_BackgroundConfig" />
    <script src="~/js/lazy-load.js" asp-append-version="true"></script>
    <script src="~/js/lazy-backgrounds.js" asp-append-version="true"></script>
</body>
</html>