@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    
    // Инициализируем ViewBag для хранения фонов
    ViewBag.TestMessage = "Hello from Layout";
    ViewBag.PageBackgrounds = new TestUmbraco.Models.PageBackgroundsModel();
}
<!DOCTYPE html>
