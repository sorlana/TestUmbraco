@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem>

@{
    var content = Model.Content;
    var nameItem = content.HasValue("nameItem") ? content.Value<string>("nameItem") : "";
    var idItem = content.HasValue("idItem") ? content.Value<string>("idItem") : "";
}

<div class="menu-item-landing" style="padding: 10px; border: 1px solid #ddd; margin: 5px 0; background: #f9f9f9;">
    @if (!string.IsNullOrWhiteSpace(nameItem))
    {
        <div style="margin-bottom: 5px;">
            <strong>Name:</strong> @nameItem
        </div>
    }
    
    @if (!string.IsNullOrWhiteSpace(idItem))
    {
        <div style="margin-bottom: 5px;">
            <strong>ID:</strong> @idItem
        </div>
    }
    
    @if (string.IsNullOrWhiteSpace(nameItem) && string.IsNullOrWhiteSpace(idItem))
    {
        <div style="color: #999; font-style: italic;">
            Нет данных. Заполните поля nameItem и idItem.
        </div>
    }
</div>
