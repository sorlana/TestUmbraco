@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedElement>
@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.PublishedContent

<div style="
    padding: 12px;
    margin: 5px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    font-family: Arial, sans-serif;
    ">
    
    @{
        // –í Umbraco 17 –∏—Å–ø–æ–ª—å–∑—É–µ–º ItemType –≤–º–µ—Å—Ç–æ Name –¥–ª—è IPublishedContentType
        var contentType = Model.ContentType;
        var alias = contentType.Alias;
        
        // –ü–æ–ª—É—á–∞–µ–º –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–∏–ø–∞ –∫–æ–Ω—Ç–µ–Ω—Ç–∞ —á–µ—Ä–µ–∑ –µ–≥–æ –∞–ª–∏–∞—Å
        var name = GetContentTypeName(alias);
        
        // –ü–æ–ø—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å –∑–∞–≥–æ–ª–æ–≤–æ–∫ —Ä–∞–∑–Ω—ã–º–∏ —Å–ø–æ—Å–æ–±–∞–º–∏
        var title = Model.Value<string>("title") 
                   ?? Model.Value<string>("heading") 
                   ?? Model.Value<string>("header")
                   ?? Model.Value<string>("name")
                   ?? name;
        
        var text = Model.Value<string>("text") 
                  ?? Model.Value<string>("bodyText") 
                  ?? Model.Value<string>("description")
                  ?? Model.Value<string>("content");
    }
    
    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
        <div style="
            width: 32px;
            height: 32px;
            background: #3544b1;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
            ">
            @if (!string.IsNullOrEmpty(alias))
            {
                @alias.Substring(0, Math.Min(1, alias.Length)).ToUpper()
            }
        </div>
        <div>
            <div style="font-weight: bold; color: #3544b1; font-size: 14px;">
                @title
            </div>
            <div style="font-size: 11px; color: #666;">
                @alias
            </div>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(text))
    {
        var cleanText = System.Text.RegularExpressions.Regex.Replace(text, "<.*?>", " ");
        var previewText = cleanText.Length > 100 ? cleanText.Substring(0, 100) + "..." : cleanText;
        
        <div style="
            font-size: 12px;
            color: #555;
            line-height: 1.4;
            margin-top: 8px;
            padding: 8px;
            background: rgba(255,255,255,0.7);
            border-radius: 4px;
            border-left: 3px solid #3544b1;
            ">
            @previewText
        </div>
    }
    
    @if (Model.Value("image") != null || Model.Value("media") != null || Model.Value("picture") != null)
    {
        <div style="margin-top: 8px; font-size: 12px; color: #666; display: flex; align-items: center; gap: 5px;">
            <span style="font-size: 14px;">üñºÔ∏è</span>
            <span>–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ</span>
        </div>
    }
</div>

@functions {
    private string GetContentTypeName(string alias)
    {
        // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º alias –≤ —á–∏—Ç–∞–µ–º–æ–µ –∏–º—è
        if (string.IsNullOrEmpty(alias))
            return "–ë–ª–æ–∫";
            
        // –£–±–∏—Ä–∞–µ–º "Block" –∏–∑ –∫–æ–Ω—Ü–∞
        var name = alias.Replace("Block", "");
        
        // –†–∞–∑–¥–µ–ª—è–µ–º CamelCase –Ω–∞ —Å–ª–æ–≤–∞
        name = System.Text.RegularExpressions.Regex.Replace(
            name, 
            "(\\B[A-Z])", 
            " $1"
        );
        
        // –î–µ–ª–∞–µ–º –ø–µ—Ä–≤—É—é –±—É–∫–≤—É –∑–∞–≥–ª–∞–≤–Ω–æ–π
        if (!string.IsNullOrEmpty(name))
        {
            name = char.ToUpper(name[0]) + name.Substring(1);
        }
        
        return name;
    }
}