@model IPublishedContent?

@{
    var cssClass = ViewData["CssClass"] as string ?? "";
    var altText = ViewData["AltText"] as string ?? Model?.Name ?? "";
}

<div style="border: 5px solid red; padding: 10px; background: yellow;">
    <h3>TEST MODE: Should see red border and yellow background</h3>
    
    @if (Model != null)
    {
        <p>Image URL: @Model.Url()</p>
        <p>Image Name: @Model.Name</p>
        
        <!-- Простейший img тег -->
        <img src="@Model.Url()" 
             alt="@altText"
             style="width:100%; height:auto; display:block; border:3px solid blue;"
             loading="lazy" />
    }
    else
    {
        <p>NO IMAGE MODEL</p>
    }
</div>